<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class = "container-fluid">
      <div class="navbar-header">
        <div class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
        <h3 class = "navbar-brand">Bookers</h3>
      </div>
      <div class="collapse navbar-collapse" id="navbarEexample">
        <ul class="navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Home", user_path(current_user.id) %>
        </li>
        <li class="nav-item">
          <%= link_to "Users", users_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Books", books_path(@book) %>
        </li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>
         </ul>
       </div>
      </div>
    </div>
  </nav>
      
        <!-- ↓以下のコードは、5章で正しいroutingに書き直します。 -->
        
    <% else %>
      <li class="">
        <%= link_to "Home", top_path %>
        <%= link_to "About", home_about_path %>
        <%= link_to "sign up", new_user_registration_path %>
      
      
        <%= link_to "login", new_user_session_path %>
      </li>
    <% end %>
 

<% flash.each do |message_type, message| %>
  <%= content_tag :div, message, class: message_type %>
<% end %>
  <div class = "container">
    <%= yield %>
  </div>
  </body>
</html>
