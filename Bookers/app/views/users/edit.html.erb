<% if @user.errors.any? %>
  <div class = "alert">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
   </div>
<% end %>
<div class="container">
  <div class="row">
    <h2 class="form-header-title">User info</h2>
    <div class="form-body">
      <%= form_for(@user) do |f| %>
        <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true %>
        <br>
        <label for="user_image">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        <br>
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true %>
        <br>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>