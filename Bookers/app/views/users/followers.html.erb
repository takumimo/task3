<div class = "row">
	<h2>Follower Users</h2>
	<% if @users.empty? %>
		<p>ユーザーはいません</p>
	<% else %>
		<table class = "table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan = "3"></th>
				</tr>
			</thead>
			<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg" %></td>
					<td><%= user.name %></td>
					<td><%= "フォロー数：#{user.following.count}" %></td>
					<td><%= "フォロワー数：#{user.followers.count}" %></td>
					<td><%= link_to 'Show', user_path(user) %></td>
				</tr>
			<% end %>
		</table>
	<%end%>
</div>