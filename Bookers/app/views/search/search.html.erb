<% if @user_or_book == "1"%>
    <h1>Users search for</h1>
    <table class = "table">
        
        <thead>
            <tr>
                <th>image</th>
                <th>name</th>
            </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
        	<tr>
        		<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg" %></td>
        		<td><%= user.name %></td>
        	</tr>
        <% end %>
    	</tbody>
    </table>

<% elsif @user_or_book == "2" %>
    <h2>Books search for </h2>
    <table class = "table">
    	<thead>
            <tr>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
        </thead>

        <% @books.each do |book| %>
        	<tr>
        		<td><%= book.title %></td>
        		<td><%= book.body %></td>
        	</tr>
    	<% end %>
    </table>
<% else %>
	<p>該当するものはありません</p>
<% end %>
