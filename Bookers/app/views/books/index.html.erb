
<% if @book.errors.any? %>
	<div class = "alert">
		<h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
		<ul>
	      <% @book.errors.full_messages.each do |message| %>
	      <li><%= message %></li>
	      <% end %>
	    </ul>
	 </div>
<% end %>
<div class = "row">
	<%= render 'books/common_book' ,user: @user,book: @book %>
	<div class = "col-xs-9">
		<h2>Books</h2>
		<table class = "table table-hover ">
			<thead>
				<tr>
					<th colspan = "1"></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan = "2"></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td><%= link_to user_path(book.user) do %>
								<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg" %>
							<% end %>
						</td>
						<td><%= link_to book.title, book_path(book) %></td>
						<td><%= book.body %></td>
						<!-- いいね機能 -->
						<% if @book.favorited_by?(current_user) %>
						<td>
							<%= link_to book_favorite_path(book), method: :delete do %>
								<i class="fas fa-heart" style="color: red"></i>
								<%= @book.favorites.count %>
							<% end %>
						</td>
						<% else %>
						<td>
							<%= link_to book_favorites_path(book), method: :post do %>
								<i class="fal fa-heart"></i>
								<%= @book.favorites.count %>
							<% end %>
						</td>
						<% end %>
						<!-- いいね機能 -->
						<td><%= "コメント数：#{book.book_comments.count}" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>





