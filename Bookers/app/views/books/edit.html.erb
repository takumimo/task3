

<% if @book.errors.any? %>
  <div class = "alert">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
   </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>
        <div class="form-header text-center">
        </div>
          <%= form_for(@book) do |f| %>
            <label for="book_title">Title</label>
              <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputEmail"%>
            <label for="book_opinion">Opinion</label>
              <%= f.text_area :body, autofocus: true, class:"form-control", id:"inputEmail"%>
              <div style = "margin-top: 10px;">
                <%= f.submit "Update Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
              </div>
              <div style = "margin-top: 10px;">
                <p><%= link_to 'Show', book_path(@book) %>|<%= link_to 'Back', books_path %></p>
              </div>
          <% end %>
    </div>
  </div>
</div>
